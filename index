<body>
    <div class="sky">
        <div class="cloud cloud1"></div>
        <div class="cloud cloud2"></div>
        <div class="cloud cloud3"></div>
    </div>

    <div class="container" id="mainMenu">
        <h1 class="game-title">Dr.WEEE's World</h1>
        <div class="menu">
            <button class="menu-btn" onclick="startGame('adventure')">üéÆ Adventure Game</button>
            <button class="menu-btn" onclick="startGame('race')">üèÅ Quiz Rally</button>
            <button class="menu-btn" onclick="showLeaderboard()">üèÜ Leaderboard</button>
        </div>
    </div>

    <div class="game-container" id="gameContainer">
        <div class="game-header">
            <div class="score-display">Score: <span id="score">0</span></div>
            <button class="back-btn" onclick="backToMenu()">‚Üê Back to Menu</button>
        </div>
        <canvas id="gameCanvas" width="1200" height="600"></canvas>
    </div>

    <div class="quiz-panel" id="quizPanel">
        <div class="quiz-question" id="quizQuestion"></div>
        <div class="quiz-answers" id="quizAnswers"></div>
    </div>

    <div class="leaderboard" id="leaderboard">
        <h2>üèÜ Leaderboard üèÜ</h2>
        <div id="leaderboardEntries"></div>
        <button class="back-btn" style="margin-top: 30px; display: block; margin-left: auto; margin-right: auto;" onclick="backToMenu()">‚Üê Back to Menu</button>
    </div>

    <div class="name-input-panel" id="nameInputPanel">
        <h3>üéâ Game Complete! üéâ</h3>
        <p style="font-size: 1.5em; margin-bottom: 20px;">Your Score: <span id="finalScore"></span></p>
        <input type="text" class="name-input" id="playerName" placeholder="Enter your name" maxlength="20">
        <button class="submit-btn" onclick="submitScore()">Submit Score</button>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        let gameMode = null;
        let score = 0;
        let gameRunning = false;
        let currentQuestion = null;
        let questionsAnswered = 0;
        const maxQuestions = 10;

        // Sample questions database
        const questions = [
            { q: "What is 7 + 8?", a: ["13", "15", "16", "14"], correct: 1 },
            { q: "What is the capital of France?", a: ["London", "Paris", "Berlin", "Madrid"], correct: 1 },
            { q: "How many continents are there?", a: ["5", "6", "7", "8"], correct: 2 },
            { q: "What color is the sky on a clear day?", a: ["Green", "Blue", "Red", "Yellow"], correct: 1 },
            { q: "What is 12 √ó 3?", a: ["32", "36", "38", "34"], correct: 1 },
            { q: "Which planet is closest to the Sun?", a: ["Venus", "Mercury", "Earth", "Mars"], correct: 1 },
            { q: "How many legs does a spider have?", a: ["6", "8", "10", "4"], correct: 1 },
            { q: "What is 100 - 47?", a: ["53", "57", "52", "63"], correct: 0 },
            { q: "What shape has 4 equal sides?", a: ["Triangle", "Square", "Pentagon", "Circle"], correct: 1 },
            { q: "How many hours are in a day?", a: ["12", "24", "48", "36"], correct: 1 },
            { q: "What is the largest ocean?", a: ["Atlantic", "Pacific", "Indian", "Arctic"], correct: 1 },
            { q: "What is 5 √ó 5?", a: ["20", "25", "30", "15"], correct: 1 },
            { q: "Which animal is known as the king of the jungle?", a: ["Tiger", "Lion", "Bear", "Elephant"], correct: 1 },
            { q: "How many days are in a week?", a: ["5", "7", "6", "8"], correct: 1 },
            { q: "What is the freezing point of water in Celsius?", a: ["0¬∞", "32¬∞", "100¬∞", "-10¬∞"], correct: 0 }
        ];

        // Player object for adventure game
        const player = {
            x: 50,
            y: 400,
            width: 40,
            height: 40,
            velocityY: 0,
            jumping: false,
            color: '#e74c3c'
        };

        // Race game objects
        const playerCar = { x: 50, y: 200, width: 60, height: 40, color: '#3498db' };
        const aiCar = { x: 50, y: 300, width: 60, height: 40, color: '#e74c3c' };
        const finishLine = 1100;

        // Platforms for adventure game
        const platforms = [
            { x: 0, y: 500, width: 400, height: 20 },
            { x: 500, y: 450, width: 200, height: 20 },
            { x: 800, y: 400, width: 200, height: 20 },
            { x: 1100, y: 350, width: 100, height: 20 }
        ];

        // Knowledge gate
        let gate = { x: 450, y: 370, width: 50, height: 80, active: true };
        const goal = { x: 1150, y: 290, width: 40, height: 40 };

        // Keyboard input
        const keys = {};
        document.addEventListener('keydown', (e) => {
            keys[e.key] = true;
            if (e.key === ' ' && !player.jumping && gameRunning && gameMode === 'adventure') {
                player.velocityY = -15;
                player.jumping = true;
            }
        });
        document.addEventListener('keyup', (e) => keys[e.key] = false);

        function startGame(mode) {
            gameMode = mode;
            score = 0;
            questionsAnswered = 0;
            document.getElementById('score').textContent = score;
            document.getElementById('mainMenu').style.display = 'none';
            document.getElementById('gameContainer').style.display = 'block';
            
            // Reset positions
            player.x = 50;
            player.y = 400;
            player.velocityY = 0;
            player.jumping = false;
            gate.active = true;
            playerCar.x = 50;
            aiCar.x = 50;
            
            gameRunning = true;
            
            if (mode === 'adventure') {
                adventureLoop();
            } else if (mode === 'race') {
                raceLoop();
                setTimeout(() => showQuestion(), 1000);
            }
        }

        function adventureLoop() {
            if (!gameRunning) return;
            
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw platforms
            ctx.fillStyle = '#27ae60';
            platforms.forEach(platform => {
                ctx.fillRect(platform.x, platform.y, platform.width, platform.height);
            });
            
            // Draw gate
            if (gate.active) {
                ctx.fillStyle = 'rgba(155, 89, 182, 0.5)';
                ctx.fillRect(gate.x, gate.y, gate.width, gate.height);
                ctx.strokeStyle = '#8e44ad';
                ctx.lineWidth = 3;
                ctx.strokeRect(gate.x, gate.y, gate.width, gate.height);
                
                // Gate sparkles
                ctx.fillStyle = '#fff';
                for (let i = 0; i < 5; i++) {
                    ctx.fillRect(gate.x + Math.random() * gate.width, gate.y + Math.random() * gate.height, 3, 3);
                }
            }
            
            // Draw goal
            ctx.fillStyle = '#f1c40f';
            ctx.beginPath();
            ctx.arc(goal.x + goal.width/2, goal.y + goal.height/2, goal.width/2, 0, Math.PI * 2);
            ctx.fill();
            ctx.strokeStyle = '#f39c12';
            ctx.lineWidth = 3;
            ctx.stroke();
            
            // Player movement
            if (keys['ArrowLeft']) player.x -= 5;
            if (keys['ArrowRight']) player.x += 3;
            
            // Gravity
            player.velocityY += 0.8;
            player.y += player.velocityY;
            
            // Collision with platforms
            player.jumping = true;
            platforms.forEach(platform => {
                if (player.x + player.width > platform.x &&
                    player.x < platform.x + platform.width &&
                    player.y + player.height >= platform.y &&
                    player.y + player.height <= platform.y + 20 &&
                    player.velocityY >= 0) {
                    player.y = platform.y - player.height;
                    player.velocityY = 0;
                    player.jumping = false;
                }
            });
            
            // Check collision with gate
            if (gate.active &&
                player.x + player.width > gate.x &&
                player.x < gate.x + gate.width &&
                player.y + player.height > gate.y &&
                player.y < gate.y + gate.height) {
                gameRunning = false;
                showQuestion();
            }
            
            // Check collision with goal
            if (!gate.active &&
                player.x + player.width > goal.x &&
                player.x < goal.x + goal.width &&
                player.y + player.height > goal.y &&
                player.y < goal.y + goal.height) {
                gameRunning = false;
                endGame();
            }
            
            // Draw player
            ctx.fillStyle = player.color;
            ctx.fillRect(player.x, player.y, player.width, player.height);
            ctx.fillStyle = '#fff';
            ctx.fillRect(player.x + 10, player.y + 10, 8, 8);
            ctx.fillRect(player.x + 22, player.y + 10, 8, 8);
            
            requestAnimationFrame(adventureLoop);
        }

        function raceLoop() {
            if (!gameRunning) return;
            
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw track
            ctx.fillStyle = '#7f8c8d';
            ctx.fillRect(0, 180, canvas.width, 100);
            ctx.fillRect(0, 280, canvas.width, 100);
            
            // Track lines
            ctx.strokeStyle = '#fff';
            ctx.lineWidth = 3;
            ctx.setLineDash([20, 15]);
            ctx.beginPath();
            ctx.moveTo(0, 230);
            ctx.lineTo(canvas.width, 230);
            ctx.moveTo(0, 330);
            ctx.lineTo(canvas.width, 330);
            ctx.stroke();
            ctx.setLineDash([]);
            
            // Finish line
            ctx.fillStyle = '#2c3e50';
            for (let i = 0; i < 10; i++) {
                ctx.fillRect(finishLine, 180 + i * 20, 20, 10);
            }
            
            // Draw cars
            ctx.fillStyle = playerCar.color;
            ctx.fillRect(playerCar.x, playerCar.y, playerCar.width, playerCar.height);
            ctx.fillStyle = '#fff';
            ctx.fillRect(playerCar.x + 5, playerCar.y + 5, 15, 15);
            ctx.fillRect(playerCar.x + 40, playerCar.y + 5, 15, 15);
            
            ctx.fillStyle = aiCar.color;
            ctx.fillRect(aiCar.x, aiCar.y, aiCar.width, aiCar.height);
            ctx.fillStyle = '#fff';
            ctx.fillRect(aiCar.x + 5, aiCar.y + 5, 15, 15);
            ctx.fillRect(aiCar.x + 40, aiCar.y + 5, 15, 15);
            
            requestAnimationFrame(raceLoop);
        }

        function showQuestion() {
            const questionData = questions[Math.floor(Math.random() * questions.length)];
            currentQuestion = questionData;
            
            document.getElementById('quizQuestion').textContent = questionData.q;
            const answersDiv = document.getElementById('quizAnswers');
            answersDiv.innerHTML = '';
            
            questionData.a.forEach((answer, index) => {
                const btn = document.createElement('button');
                btn.className = 'answer-btn';
                btn.textContent = answer;
                btn.onclick = () => checkAnswer(index);
                answersDiv.appendChild(btn);
            });
            
            document.getElementById('quizPanel').style.display = 'block';
        }

        function checkAnswer(selectedIndex) {
            const correct = selectedIndex === currentQuestion.correct;
            const buttons = document.querySelectorAll('.answer-btn');
            
            buttons[selectedIndex].className += correct ? ' correct' : ' wrong';
            buttons[currentQuestion.correct].className += ' correct';
            
            if (correct) {
                score += 100;
                document.getElementById('score').textContent = score;
            }
            
            setTimeout(() => {
                document.getElementById('quizPanel').style.display = 'none';
                
                if (gameMode === 'adventure') {
                    if (correct) {
                        gate.active = false;
                    } else {
                        player.x -= 100;
                    }
                    gameRunning = true;
                    adventureLoop();
                } else if (gameMode === 'race') {
                    questionsAnswered++;
                    
                    if (correct) {
                        playerCar.x += 100;
                    } else {
                        playerCar.x += 20;
                    }
                    
                    // AI answer (random)
                    if (Math.random() > 0.4) {
                        aiCar.x += 100;
                    } else {
                        aiCar.x += 20;
                    }
                    
                    if (questionsAnswered >= maxQuestions) {
                        setTimeout(() => {
                            if (playerCar.x > aiCar.x) {
                                score += 500;
                                document.getElementById('score').textContent = score;
                            }
                            endGame();
                        }, 1000);
                    } else {
                        setTimeout(() => showQuestion(), 1500);
                    }
                }
            }, 1500);
        }

        function endGame() {
            gameRunning = false;
            document.getElementById('finalScore').textContent = score;
            document.getElementById('nameInputPanel').style.display = 'block';
        }

        function submitScore() {
            const name = document.getElementById('playerName').value.trim() || 'Anonymous';
            
            // Get existing leaderboard
            let leaderboard = JSON.parse(localStorage.getItem('drweee_leaderboard') || '[]');
            
            // Add new score
            leaderboard.push({ name: name, score: score });
            
            // Sort by score (highest first)
            leaderboard.sort((a, b) => b.score - a.score);
            
            // Keep only top 10
            leaderboard = leaderboard.slice(0, 10);
            
            // Save
            localStorage.setItem('drweee_leaderboard', JSON.stringify(leaderboard));
            
            document.getElementById('nameInputPanel').style.display = 'none';
            showLeaderboard();
        }

        function showLeaderboard() {
            document.getElementById('mainMenu').style.display = 'none';
            document.getElementById('gameContainer').style.display = 'none';
            
            const leaderboard = JSON.parse(localStorage.getItem('drweee_leaderboard') || '[]');
            const entriesDiv = document.getElementById('leaderboardEntries');
            entriesDiv.innerHTML = '';
            
            if (leaderboard.length === 0) {
                entriesDiv.innerHTML = '<p style="text-align: center; font-size: 1.5em; color: #7f8c8d;">No scores yet! Be the first to play!</p>';
            } else {
                leaderboard.forEach((entry, index) => {
                    const div = document.createElement('div');
                    div.className = 'leaderboard-entry';
                    if (index === 0) div.className += ' top1';
                    else if (index === 1) div.className += ' top2';
                    else if (index === 2) div.className += ' top3';
                    
                    const medal = index === 0 ? 'ü•á ' : index === 1 ? 'ü•à ' : index === 2 ? 'ü•â ' : `${index + 1}. `;
                    
                    div.innerHTML = `
                        <span class="entry-name">${medal}${entry.name}</span>
                        <span class="entry-score">${entry.score} pts</span>
                    `;
                    entriesDiv.appendChild(div);
                });
            }
            
            document.getElementById('leaderboard').style.display = 'block';
        }

        function backToMenu() {
            gameRunning = false;
            document.getElementById('gameContainer').style.display = 'none';
            document.getElementById('leaderboard').style.display = 'none';
            document.getElementById('quizPanel').style.display = 'none';
            document.getElementById('nameInputPanel').style.display = 'none';
            document.getElementById('mainMenu').style.display = 'flex';
        }
    </script>
</body>
</html>