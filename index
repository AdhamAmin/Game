            z-index: 0;
        }

        .cloud {
            position: absolute;
            background: white;
            border-radius: 100px;
            opacity: 0.8;
            animation: float linear infinite;
        }

        .cloud:before, .cloud:after {
            content: '';
            position: absolute;
            background: white;
            border-radius: 100px;
        }

        .cloud1 {
            width: 100px;
            height: 40px;
            top: 20%;
            left: -100px;
            animation-duration: 25s;
        }

        .cloud1:before {
            width: 50px;
            height: 50px;
            top: -25px;
            left: 10px;
        }

        .cloud1:after {
            width: 60px;
            height: 40px;
            top: -15px;
            right: 10px;
        }

        .cloud2 {
            width: 120px;
            height: 50px;
            top: 40%;
            left: -120px;
            animation-duration: 35s;
            animation-delay: 5s;
        }

        .cloud2:before {
            width: 60px;
            height: 60px;
            top: -30px;
            left: 20px;
        }

        .cloud2:after {
            width: 70px;
            height: 50px;
            top: -20px;
            right: 15px;
        }

        .cloud3 {
            width: 80px;
            height: 35px;
            top: 60%;
            left: -80px;
            animation-duration: 30s;
            animation-delay: 10s;
        }

        .cloud3:before {
            width: 45px;
            height: 45px;
            top: -20px;
            left: 15px;
        }

        .cloud3:after {
            width: 50px;
            height: 35px;
            top: -12px;
            right: 12px;
        }

        @keyframes float {
            from {
                left: -200px;
            }
            to {
                left: 110%;
            }
        }

        /* Main Container */
        .container {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .game-title {
            font-size: 4em;
            color: #fff;
            text-shadow: 4px 4px 0 #2c3e50, 6px 6px 10px rgba(0,0,0,0.3);
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        /* Navigation Menu */
        .menu {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 30px;
        }

        .menu-btn {
            padding: 20px 60px;
            font-size: 1.5em;
            font-weight: bold;
            border: 4px solid #2c3e50;
            border-radius: 50px;
            background: linear-gradient(145deg, #3498db, #2980b9);
            color: white;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 8px 15px rgba(0,0,0,0.3);
            text-transform: uppercase;
        }

        .menu-btn:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 15px 25px rgba(0,0,0,0.4);
        }

        .menu-btn:active {
            transform: translateY(-2px);
        }

        /* Game Canvas */
        .game-container {
            display: none;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .game-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: rgba(255,255,255,0.9);
            border-radius: 15px 15px 0 0;
            border: 4px solid #2c3e50;
            border-bottom: none;
        }

        .score-display {
            font-size: 1.5em;
            font-weight: bold;
            color: #2c3e50;
        }

        .back-btn {
            padding: 10px 30px;
            font-size: 1em;
            background: #e74c3c;
            color: white;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
        }

        .back-btn:hover {
            background: #c0392b;
        }

        canvas {
            display: block;
            background: #fff;
            border: 4px solid #2c3e50;
            border-top: none;
        }

        /* Quiz Panel */
        .quiz-panel {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(255,255,255,0.98);
            padding: 30px;
            border-radius: 20px;
            border: 4px solid #2c3e50;
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
            max-width: 600px;
            display: none;
        }

        .quiz-question {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #2c3e50;
            font-weight: bold;
        }

        .quiz-answers {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .answer-btn {
            padding: 15px;
            font-size: 1.2em;
            background: #3498db;
            color: white;
            border: 3px solid #2980b9;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.2s;
            font-weight: bold;
        }

        .answer-btn:hover {
            background: #2980b9;
            transform: scale(1.05);
        }

        .answer-btn.correct {
            background: #27ae60;
            border-color: #229954;
        }

        .answer-btn.wrong {
            background: #e74c3c;
            border-color: #c0392b;
        }

        /* Leaderboard */
        .leaderboard {
            display: none;
            max-width: 800px;
            margin: 0 auto;
            background: rgba(255,255,255,0.95);
            padding: 30px;
            border-radius: 20px;
            border: 4px solid #2c3e50;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .leaderboard h2 {
            text-align: center;
            font-size: 2.5em;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .leaderboard-entry {
            display: flex;
            justify-content: space-between;
            padding: 15px;
            margin: 10px 0;
            background: linear-gradient(145deg, #ecf0f1, #bdc3c7);
            border-radius: 10px;
            border: 2px solid #95a5a6;
            font-size: 1.2em;
            font-weight: bold;
        }

        .leaderboard-entry.top1 {
            background: linear-gradient(145deg, #f1c40f, #f39c12);
            border-color: #d68910;
        }

        .leaderboard-entry.top2 {
            background: linear-gradient(145deg, #bdc3c7, #95a5a6);
            border-color: #7f8c8d;
        }

        .leaderboard-entry.top3 {
            background: linear-gradient(145deg, #e67e22, #d35400);
            border-color: #ba4a00;
        }

        .entry-name {
            color: #2c3e50;
        }

        .entry-score {
            color: #27ae60;
        }

        .name-input-panel {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(255,255,255,0.98);
            padding: 40px;
            border-radius: 20px;
            border: 4px solid #2c3e50;
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
            display: none;
            text-align: center;
        }

        .name-input-panel h3 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .name-input {
            padding: 15px;
            font-size: 1.2em;
            border: 3px solid #3498db;
            border-radius: 10px;
            width: 100%;
            margin-bottom: 20px;
        }

        .submit-btn {
            padding: 15px 40px;
            font-size: 1.2em;
            background: #27ae60;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
        }

        .submit-btn:hover {
            background: #229954;
        }
